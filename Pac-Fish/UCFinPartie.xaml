<UserControl x:Class="Pac_Fish.UCFinPartie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pac_Fish"
             mc:Ignorable="d" 
             d:DesignHeight="964" d:DesignWidth="854">
    <Grid Background="Black">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="GAME OVER" Foreground="Red" FontSize="72" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,50"/>
            <Button x:Name="BtnRetourMenu" Content="Retour au menu" Click="BtnRetourMenu_Click" Width="200" Height="50" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
